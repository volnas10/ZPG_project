# Sun scale
Transformation {
	scale: 0.4 0.4 0.4
}
# Earth tilt and spin
Transformation {
	scale: 0.2 0.2 0.2
	rotation: 0.0 0.0 0.0
	change: 0.0 3.0 0.0
	rotation: 0.0 0.0 -23.0
}
# Move away from sun and orbit
Transformation {
	rotation: 0.0 0.0 0.0
	change: 0.0 -0.5 0.0
	position: 18.0 0.0 0.0
	rotation: 0.0 0.0 0.0
	change: 0.0 0.5 0.0
}
# Complete Earth transformation
Transformation {
	transformations: [1, 2]
}
